<h1 id="manage">{{title}}</h1>

<div id="sessionForm">
  <label for="session">Session:</label>
  <input type="text" id="session" placeholder="Enter session name" />
  <button onclick="createSession()">Submit</button>
</div>

<form id="addPlayerForm">
  <label for="player">Player Name:</label>
  <input
    type="text"
    id="player"
    name="player"
    placeholder="Enter player name" />

  <button type="submit">Add Player</button>
</form>

<button onclick="populateTable()">Render</button>
<div id="playersList">
    <h2>Players:</h2>
    <div class="table-wrapper">
        <table class="custom-table" id="playersTable">
            <thead>
            <tr>
                <th>Player Name</th>
                <th>Average Pass Rating</th>
                <th>Total Passes</th>
                <th>Average Serve Rating</th>
                <th>Total Serves</th>
            </tr>
            </thead>
            <tbody>
            <!-- Rows will be dynamically added here -->
            </tbody>
        </table>
    </div>
</div>